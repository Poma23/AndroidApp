<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/apply_title"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_margin="30dp"
            android:gravity="center"
            android:text="@string/howToApply"
            android:textColor="@color/Light_Yellow"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/apply_imagebutton"
            android:layout_width="233dp"
            android:layout_height="89dp"
            android:layout_marginTop="26dp"
            android:padding="0dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/apply_title"
            app:srcCompat="@drawable/optagelse" />

        <TextView
            android:id="@+id/applyText"
            android:layout_width="307dp"
            android:layout_height="265dp"
            android:layout_margin="8dp"
            android:layout_marginBottom="156dp"

            android:text="@string/optagelseDk"
            android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/apply_imagebutton" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>